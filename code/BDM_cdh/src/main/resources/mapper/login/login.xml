<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.test.bdm.login">
    <!-- idCheck -->
    
    <select id="idCheck" parameterType="UserVO" resultType="int">
         SELECT                   
            COUNT(*) cnt         
         FROM                     
            userss               
         WHERE id = #{userId}      
    </select>
    
    <!-- idPassCheck -->
    <select id="idPassCheck" parameterType="UserVO" resultType="int">
         SELECT                   
            COUNT(*) cnt         
         FROM                     
            userss                
         WHERE id = #{userId} 
         AND   pw = #{password}        
    </select>
        
    <!-- login -->
    <select id="doSelectOne" parameterType="UserVO" resultType="UserVO">
        SELECT             
             id,       
             name,          
             pw,                
             email,         
             reg_dt     
         FROM               
             userss          
         WHERE Id = #{userId}     
    </select>    


</mapper>